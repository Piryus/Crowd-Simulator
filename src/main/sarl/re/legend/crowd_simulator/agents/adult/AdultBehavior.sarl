	}

	/** 
	 * Moves the agent randomly
	 */
	def moveRandomly {
		var rand = new Random
		var dir : int
		if (rand.nextBoolean)
			dir = 1
		else
			dir = -1
		var dir2 : int
		if (rand.nextBoolean)
			dir2 = 1
		else
			dir2 = -1
		move(dir, dir2)
	}
}
