package re.legend.crowd_simulator

/** 
 * 
 */
 

import io.sarl.core.Initialize
import io.sarl.core.Logging

import io.sarl.core.Lifecycle
import io.sarl.core.Destroy

/** 
 * @authors Emile & Andre
 * 
 */
 

 agent KidAgent{
 	uses Logging, Lifecycle
 	
 	on Initialize {
 		loggingName = "KidAgent"
 	}

	on WorldCreation {
		info("Hola, I am kid and I have spawned in this world")
	}
 	
 	on Hello {
 		info("I am KidAgent and I have received your Hello AdultAgent")
 		killMe()
 	}

	on Destroy {
		// Event trigger when the agent is destroyed from the system.
		// You should put all the resource releasing statements in this block of code.
		info("The KidAgent was stopped.")
	}
 	
 	
 }
 