package re.legend.crowd_simulator.time

import java.util.concurrent.TimeUnit

/** Time manager of the environment
 * 
 */
interface Time extends Comparable<Time> {

	/** Replies the current time in the given time unit.
	 * 
	 * @param unit is the time unit to use for replied value.
	 * @return the current time.
	 */
	def getCurrentTime(unit : TimeUnit = null) : float

}